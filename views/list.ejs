
<%-include("header.ejs")-%>

<div class="box" id="heading">
<h1><%=listTitle%></h1>
</div>
<div class="box">

  <% for(var i=0;i<itemm.length;i++){%>
    <form action="/delete" method="post">
    <div class="item">
      <input type="checkbox" name="checkbox" value="<%=itemm[i]._id%>" onchange="this.form.submit()">
        <p><%=itemm[i].name%></p>
    </div>
    <input type="hidden" name="list" value="<%=listTitle%>"></input>
  </form>
  <%}%>
<form class="item" action="/" method="post">
  <input type="text" name="newitem" value="" placeholder="New Item" autocomplete="off">
  <button type="submit" name="list" value=<%=listTitle%>>+</button>
</form>
</div>

<%-include("footer.ejs")-%>
